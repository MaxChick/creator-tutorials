{
    "name": "offset 2d path",
    "alternateNames": [
      "offset curve",
      "offset polygon"
    ],
    "defaultNodeName": "offset 2d path",
    "path": [
      "geometry",
      "2d path"
    ],
    "help": "Offsets curves in the chosen work plane.",
    "input": {
      "geometry": {
        "type": "geometry",
        "displayName": "geometry"
      },
      "workplane": {
        "type": "enum",
        "displayName": "work plane",
        "default": 2,
        "options": [
          "X = 0",
          "Y = 0",
          "Z = 0"
        ]
      },
      "preFlatten": {
        "type": "boolean",
        "displayName": "pre-flatten",
        "default": true,
        "description": "Flattens the input curves into the chosen work plane before offset."
      },
      "offset": {
        "type": "float",
        "displayName": "offset"
      },
      "joinType": {
        "type": "enum",
        "displayName": "join",
        "options": [
          "miter",
          "square",
          "round",
          "none (simple)"
        ],
        "description": "Join type of offset curves."
      },
      "miterLimit": {
        "type": "float",
        "displayName": "miter limit",
        "hideWhen": "joinType > 0"
      },
      "arcPrecision": {
        "type": "float",
        "displayName": "arc precision",
        "hideWhen": "joinType < 2 || joinType == 3"
      },
      "closeCurves": {
        "type": "boolean",
        "displayName": "close resulting curves",
        "default": true
      }
    },
    "type": "OffsetCurve",
    "output": {
      "geometry": {
        "type": "geometry",
        "displayName": "geometry"
      },
      "points": {
        "type": "list:vector",
        "displayName": "points",
        "description": "point positions"
      },
      "points.x": {
        "type": "list:float",
        "displayName": "points.x",
        "description": "point x values"
      },
      "points.y": {
        "type": "list:float",
        "displayName": "points.y",
        "description": "point y values"
      },
      "points.z": {
        "type": "list:float",
        "displayName": "points.z",
        "description": "point z values"
      }
    },
    "nodeClass": "node"
  }