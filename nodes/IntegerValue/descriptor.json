{
    "name": "integer",
    "alternateNames": [
      "whole",
      "number",
      "parameter"
    ],
    "defaultNodeName": "number",
    "path": [
      "value",
      "parameter"
    ],
    "help": "Creates an integer (whole number) value.",
    "input": {
      "value": {
        "type": "integer",
        "displayName": "value",
        "default": 0
      },
      "defaultValue": {
        "type": "integer",
        "displayName": "default",
        "default": 0
      },
      "setToDefault": {
        "type": "button",
        "displayName": "set to default"
      },
      "minMaxMode": {
        "type": "enum",
        "displayName": "min/max mode",
        "default": 1,
        "options": [
          "hard",
          "soft"
        ],
        "description": "Soft: will allow values outside of the slider range. Hard: won't allow values outside the slider range."
      },
      "min": {
        "type": "integer",
        "displayName": "min",
        "default": 0
      },
      "max": {
        "type": "integer",
        "displayName": "max",
        "default": 100
      },
      "hideControl": {
        "type": "boolean",
        "displayName": "hide control",
        "default": false
      },
      "hideLabel": {
        "type": "boolean",
        "displayName": "hide label",
        "default": false,
        "hideWhen": "hideControl"
      },
      "hideInputField": {
        "type": "boolean",
        "displayName": "hide input field",
        "default": false,
        "hideWhen": "hideControl"
      },
      "hideSlider": {
        "type": "boolean",
        "displayName": "hide slider",
        "default": false,
        "hideWhen": "hideControl"
      }
    },
    "type": "IntegerValue",
    "output": {
      "value": {
        "type": "integer",
        "displayName": "value",
        "defaultOutput": true
      },
      "inputIsNull": {
        "type": "boolean",
        "displayName": "input is null",
        "description": "Output is true when the value input is null."
      }
    },
    "nodeClass": "value"
  }